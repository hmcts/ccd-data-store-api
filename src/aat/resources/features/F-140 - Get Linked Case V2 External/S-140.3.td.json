{
  "_guid_": "S-140.3",
  "_extends_": "Get_Linked_Cases__Base",
  "title": "should get 404 when case reference does not exist",

  "specs": [
    "an active profile in CCD",
    "contains a valid user authorisation token without access to the operation",
    "contains a case reference that does not exist",
    "contains an HTTP-404 Not Found"
  ],

  "request": {
    "pathVariables": {
      "cid": "${[scenarioContext][childContexts][Unauthorised_Case_Creation_Data][testData][actualResponse][body][id]}"
    }
  },

  "expectedResponse": {
    "_extends_": "Common_404_Response",
    "body": {
      "exception": "uk.gov.hmcts.ccd.domain.service.getcase.CaseNotFoundException",
      "message": "No case found for reference: ${[scenarioContext][childContexts][Unauthorised_Case_Creation_Data][testData][actualResponse][body][id]}",
      "path": "/getLinkedCases/${[scenarioContext][childContexts][Unauthorised_Case_Creation_Data][testData][actualResponse][body][id]}",
      "details": null,
      "callbackErrors": null,
      "callbackWarnings": null
    }
  }
}
