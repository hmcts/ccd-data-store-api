{
  "_guid_": "S-200",
  "_extends_": "Base_Expecting_400",
  "title": "must return 400 when case reference does not exists",
  "specs": [
    "an active profile in CCD",
    "contains an invalid case id",
    "has a 400 bad request code"
  ],
  "productName": "CCD Data Store",
  "operationName": "Retrieve a trigger for case by ID",
  "method": "GET",
  "uri": "cases/{caseId}/event-triggers/{triggerId}",
  "request": {
    "headers" : {
      "experimental" : "true",
      "Content-Type": "application/json"
    },
    "pathVariables": {
      "caseId": "1234567890123456",
      "triggerId": "START_PROGRESS"
    }
  },
  "expectedResponse": {
    "headers" : {
      "Cache-Control" : "no-cache, no-store, max-age=0, must-revalidate",
      "Connection" : "close",
      "Content-Encoding" : "gzip",
      "Content-Type" : "application/json;charset=UTF-8",
      "Date" : "[[ANY]]",
      "Expires" : "0",
      "Pragma" : "no-cache",
      "Transfer-Encoding" : "chunked",
      "X-Content-Type-Options" : "nosniff",
      "X-Frame-Options" : "DENY",
      "X-XSS-Protection" : "1; mode=block"
    },
    "body" : {
      "exception" : "uk.gov.hmcts.ccd.endpoint.exceptions.BadRequestException",
      "timestamp" : "[[ANY]]",
      "message" : "Case ID is not valid",
      "path" : "[[ANY]]",
      "details" : null,
      "callbackErrors" : null,
      "callbackWarnings" : null
    }
  }
}
