{
  "_guid_": "S-1009.12",
  "_extends_": "F-1009_Test_Data_Base_V2",

  "title": "CaseLink field contains blank value and Submit Case Creation Event is invoked on v2_external#/case-controller/createCaseUsingPOST",

  "prerequisites" : [ {
    "Token_Creation": "S-1009_GetCreateToken"
  }
  ],

  "specs": [
    "an active profile in CCD",
    "contains blank/null value in the CaseLink field"
  ],

  "request": {
    "body": {
      "data": {
        "CaseLinkField": {
          "CaseReference": ""
        },
        "TextField" : "S-1009.12"
      },
      "event": {
        "id": "createCaseCaseLinks",
        "summary": "",
        "description": ""
      },
      "security_classification": "PUBLIC",
      "event_token" : "${[scenarioContext][childContexts][Token_Creation][testData][actualResponse][body][token]}",
      "ignore_warning": true
    }
  },

  "expectedResponse": {
    "body" : {
      "data" : {
        "TextField" : "S-1009.12",
        "CaseLinkField" : {
          "CaseReference" : ""
        }
      },
      "data_classification" : {
        "TextField" : "PUBLIC",
        "CaseLinkField" : {
          "classification" : "PUBLIC",
          "value" : {
            "CaseReference" : "PUBLIC"
          }
        }
      }
    }
  }
}
