{
  "_guid_": "S-1008.32",
  "_extends_": "F-1008_Test_Data_Base_V2",

  "title": "Case Link value changed and CaseLink field in the Request contains CaseReference value and Submit Event Creation is invoked on v2_external#/case-controller/createEventUsingPOST",

  "specs": [
    "an active profile in CCD",
    "contains correctly configured CaseLink field with Case Reference created in F-1008_CreateCasePreRequisiteCaseworkerBase",
    "specifying the case to be updated, as created in F-1008_CreateAnotherCasePreRequisiteCaseworkerBase, CaseLink field changed"
  ],

  "request": {
    "pathVariables": {
      "caseId": "${[scenarioContext][childContexts][F-1008_CreateLinkedCasePreRequisiteCaseworkerBase][testData][actualResponse][body][id]}"
    },
    "body": {
      "data": {
        "CaseLinkField": {
          "CaseReference": "${}${[scenarioContext][childContexts][F-1008_CreateAnotherCasePreRequisiteCaseworkerBase][testData][actualResponse][body][id]}"
        },
        "TextField" : "S-1008.32"
      },
      "event": {
        "id": "updateCase",
        "summary": "",
        "description": ""
      },
      "security_classification": "PUBLIC",
      "event_token" : "${[scenarioContext][childContexts][F-1008-GetLinkedCaseUpdateEventToken][testData][actualResponse][body][token]}",
      "ignore_warning": true
    }
  },

  "expectedResponse": {
    "body" : {
      "id": "${}${[scenarioContext][childContexts][F-1008_CreateLinkedCasePreRequisiteCaseworkerBase][testData][actualResponse][body][id]}",
      "data" : {
        "TextField" : "S-1008.32",
        "CaseLinkField" : {
          "CaseReference" : "${}${[scenarioContext][childContexts][F-1008_CreateAnotherCasePreRequisiteCaseworkerBase][testData][actualResponse][body][id]}"
        }
      },
      "data_classification" : {
        "TextField" : "PUBLIC",
        "CaseLinkField" : {
          "classification" : "PUBLIC",
          "value" : {
            "CaseReference" : "PUBLIC"
          }
        }
      }
    }
  }
}
