{
  "_guid_": "S-1018.3",
  "_extends_": "F-1018_Test_Data_Base",

  "title": "CaseLink in database exists but CaseLink field in the Request contains blank/null value and Submit Event Creation is invoked on v1_external#/case-details-endpoint/createCaseEventForCaseWorkerUsingPOST",

  "specs": [
    "an active profile in CCD",
    "contains correctly configured CaseLink field with Case Reference created in F-1018_CreateCasePreRequisiteCaseworkerBase",
    "does not specify a case to be updated"
  ],

  "request": {
    "pathVariables": {
      "cid": "${[scenarioContext][childContexts][F-1018_CreateLinkedCasePreRequisiteCaseworkerBase][testData][actualResponse][body][id]}"
    },
    "body": {
      "data": {
        "CaseLinkField": {
          "CaseReference": null
        },
        "TextField" : "S-1018.3"
      },
      "event": {
        "id": "updateCase",
        "summary": "",
        "description": ""
      },
      "security_classification": "PUBLIC",
      "event_token" : "${[scenarioContext][childContexts][F-1018-GetLinkedCaseUpdateEventToken][testData][actualResponse][body][token]}",
      "ignore_warning": true
    }
  },

  "expectedResponse": {
    "body" : {
      "id": "${[scenarioContext][childContexts][F-1018_CreateLinkedCasePreRequisiteCaseworkerBase][testData][actualResponse][body][id]}",
      "jurisdiction" : "BEFTA_MASTER",
      "case_type_id" : "FT_MasterCaseType",
      "case_data" : {
        "CaseLinkField": {
          "CaseReference": null
        },
        "TextField" : "S-1018.3"
      },
      "data_classification": {
        "TextField": "PUBLIC",
        "CaseLinkField": {
          "classification": "PUBLIC",
          "value": {
            "CaseReference": "PUBLIC"
          }
        }
      }
    }
  }
}
