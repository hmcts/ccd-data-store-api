  "title": "Case Link does not exist at present and CaseLink field in the Request contains INVALID CaseReference value and Submit Event Creation is invoked on v1_external#/case-details-endpoint/createCaseEventForCaseWorkerUsingPOST",

  "specs": [
    "an active profile in CCD",
    "contains correctly configured CaseLink field as a collection",
    "specifying the case to be updated, as created in F-1008_CreateAnotherCasePreRequisiteCaseworkerBase, has a different CaseLink field in CaseCollection"
  ],

  "request": {
    "pathVariables": {
      "cid": "${[scenarioContext][childContexts][F-1008_CreateMultipleLinkedCasePreRequisiteCaseworkerBase][testData][actualResponse][body][id]}"
    },
    "body": {
      "data": {
        "CaseLinkCollection" : [
          {
            "id": "90a2df83-f256-43ec-aaa0-48e127a44402",
            "value": {
              "CaseReference": "INVALID_CASE_REF"
            }
          },
          {
            "id": "84e22baf-5bec-4eec-a31f-7a3954efc9c3",
            "value": {
              "CaseReference": "${}${[scenarioContext][childContexts][F-1008_CreateThirdCasePreRequisiteCaseworkerBase][testData][actualResponse][body][id]}"
            }
          }],
        "TextField" : "S-1008.16"
      },
      "event": {
        "id": "updateCase",
        "summary": "",
        "description": ""
      },
      "security_classification": "PUBLIC",
      "event_token" : "${[scenarioContext][childContexts][F-1008-GetMultipleLinkedCaseUpdateEventToken][testData][actualResponse][body][token]}",
      "ignore_warning": true
    }
  },

  "expectedResponse": {
    "body" : {
      "exception" : "uk.gov.hmcts.ccd.endpoint.exceptions.CaseValidationException",
      "timestamp" : "[[ANYTHING_PRESENT]]",
      "message" : "Case data validation failed",
      "path" : "[[ANYTHING_PRESENT]]",
      "details" : {
        "field_errors" : [ {
          "id" : "CaseLinkCollection.0.CaseReference",
          "message" : "The data entered is not valid for this type of field, please delete and re-enter using only valid data"
        } ]
      },
      "callbackErrors" : null,
      "callbackWarnings" : null
    }
  }
