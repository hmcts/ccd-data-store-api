{
  "_guid_": "S-1008.28",
  "_extends_": "F-1008_Test_Data_Base_Negative_Citizen",

  "title": "CCaseLink in database exists but CaseLink field in the Request contains blank/null value, some invalid case data is submitted and Submit Event Creation is invoked on v1_external#/caseworker/case-details-endpoint/validateCaseDetailsUsingPOST",

  "specs": [
    "an active profile in CCD",
    "contains correctly configured CaseLink field with Case Reference created in F-1008_CreateLinkedCasePreRequisiteCaseworkerBase",
    "CaseLink field has a blank reference",
    "Case data is invalid"
  ],

  "request": {
    "pathVariables": {
      "cid": "${[scenarioContext][childContexts][F-1008_CreateLinkedCasePreRequisiteCitizenBase][testData][actualResponse][body][id]}"
    },
    "body": {
      "data": {
        "CaseLinkField": {
          "CaseReference": ""
        },
        "TextField" : 1
      },
      "event": {
        "id": "updateCaseCitizen",
        "summary": "",
        "description": ""
      },
      "security_classification": "PUBLIC",
      "event_token" : "${[scenarioContext][childContexts][F-1008-GetLinkedCitizenCaseUpdateEventToken][testData][actualResponse][body][token]}",
      "ignore_warning": true
    }
  },

  "expectedResponse": {
    "body" : {
      "exception" : "uk.gov.hmcts.ccd.endpoint.exceptions.CaseValidationException",
      "timestamp" : "[[ANYTHING_PRESENT]]",
      "message" : "Case data validation failed",
      "path" : "[[ANYTHING_PRESENT]]",
      "details" : {
        "field_errors" : [ {
          "id" : "TextField",
          "message" : "number is not a string"
        } ]
      },
      "callbackErrors" : null,
      "callbackWarnings" : null
    }
  }
}
