{
  "_guid_": "F-1006_SearchCaseBase",
  "_extends_": "GlobalSearch__Base",

  "specs": [
    "to search a full case",
    "contains relevant jurisdictions and case types"
  ],

  "request": {
    "body": {
      "searchCriteria": {
        "CCDCaseTypeIds": [
          "FT_GlobalSearch",
          "SC_Restricted"
        ],
        "CCDJurisdictionIds": [
          "BEFTA_MASTER",
          "AUTOTEST1"
        ]
      },
      "sortCriteria": [
        {
          "sortBy": "caseName",
          "sortDirection": "descending"
        },
        {
          "sortBy": "caseManagementCategoryName",
          "sortDirection": "ascending"
        },
        {
          "sortBy": "createdDate",
          "sortDirection": "ascending"
        }
      ],
      "maxReturnRecordCount": 500,
      "startRecordNumber": 1
    }
  }
}
