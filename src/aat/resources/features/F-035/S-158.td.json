{
  "title": "should get 404 when case reference does NOT exist",

  "_guid_": "S-158",
  "_extends_": "F-035",

  "specs": [
    "an active profile in CCD",
    "contains a case reference that does not exist",
    "has a 400 Bad Request code"
  ],

  "request": {
    "pathVariables": {
      "cid": "1234567890123456"
    }
  },

  "expectedResponse": {
    "_extends_": "Common_400_Response",
    "headers": {
      "Content-Encoding": "gzip"
    },
    "body" : {
      "exception": "uk.gov.hmcts.ccd.endpoint.exceptions.BadRequestException",
      "message": "Case ID is not valid",
      "path": "/cases/1234567890123456",
      "details": null,
      "callbackErrors": null,
      "callbackWarnings": null
    }
  }
}
