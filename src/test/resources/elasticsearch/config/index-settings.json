{
  "analysis": {
    "analyzer": {
      "phone_number_analyzer": {
        "type": "custom",
        "tokenizer": "keyword",
        "filter": [
          "shingle_filter",
          "whitespace_remove"
        ]
      }
    },
    "filter": {
      "shingle_filter": {
        "type": "shingle",
        "min_shingle_size": 2,
        "max_shingle_size": 3,
        "output_unigrams": true
      },
      "whitespace_remove": {
        "type": "pattern_replace",
        "pattern": " ",
        "replacement": ""
      }
    }
  },
  "mapping": {
    "total_fields": {
      "limit": "6000"
    }
  }
}
